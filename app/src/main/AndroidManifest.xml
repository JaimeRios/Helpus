<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.jshuin.todorespuestas">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label=" "
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegistrarUsuario"
            android:label="@string/title_activity_registrar_usuario"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.jshuin.todorespuestas.MainActivity" />
        </activity>
        <activity
            android:name=".ListaPreguntas"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.jshuin.todorespuestas.MainActivity" />
        </activity>
        <activity
            android:name=".AgregarTema"
            android:label="@string/title_activity_agregar_tema"
            android:parentActivityName=".ListaPreguntas"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.jshuin.todorespuestas.ListaPreguntas" />
        </activity>
        <activity
            android:name=".AgregarRespuesta"
            android:label=" "
            android:parentActivityName=".ListaPreguntas"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.android.jshuin.todorespuestas.ListaPreguntas" />
        </activity>
    </application>

</manifest>