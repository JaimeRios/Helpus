<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.jshuin.todorespuestas.AgregarRespuesta"
    tools:showIn="@layout/activity_agregar_respuesta">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ListaRestitulo"
        android:textSize="20dp"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/ListaReslistaRespuestas"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/ListaRestitulo"
        ></ListView>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ListaRestextimput1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/ListaReslistaRespuestas">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ListaResrespuesta"
            android:hint="Agregar respuesta"
            android:textAlignment="center"
            android:inputType="text"
            android:ems="12"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ListaRestextimput2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/ListaRestextimput1">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ListaRescorreo"
            android:hint="Agregue o modifique correo"
            android:textAlignment="center"
            android:inputType="text"
            android:ems="12"
            android:gravity="center_horizontal"
            android:textSize="20sp"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ListaResAgregarRespuesta"
        android:layout_below="@+id/ListaRestextimput2"
        android:text="Enviar Respuesta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
